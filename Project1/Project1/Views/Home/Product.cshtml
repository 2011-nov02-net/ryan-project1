@model Project1.WebApp.Models.ProductLocationViewModel
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

@{
    ViewData["Title"] = "Product";
}

@{
    var user_type = HttpContextAccessor.HttpContext.Request.Cookies["user_type"];
    var user_id = HttpContextAccessor.HttpContext.Request.Cookies["user_id"];

    if (user_type == "2")
    {
        Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    }
    else
    {
        if (user_id == null)
        {
            Layout = "~/Views/Shared/_Layout.cshtml";
        }
        else
        {
            Layout = "~/Views/Shared/_LayoutLoggedIn.cshtml";
        }
    }
}

<div class="container">
    <div class="row" style="margin-top: 10em;">
        <div class="col-sm">
            <div class="product-image">
                <img src="@Html.DisplayFor(x => x.product.ProductImage)" alt="Game Case Image" style="width: 300px; height: 350px;" />
            </div>
        </div>
        <div class="col-sm">
            <div style="margin-top: 2em;">
                <h3>@Html.DisplayFor(x => x.product.ProductName)</h3>
                <h4>$@Html.DisplayFor(x => x.product.ProductPrice)</h4>
                <p>Qty In Stock: @Html.DisplayFor(x => x.product.ProductQty)</p>
                <div class="form-group">
                    <label for="locationSelect">Select a Store:</label>
                    <select class="form-control" id="locationSelect">
                        @{
                            foreach (var l in Model.locations)
                            {
                                <option>@Html.DisplayFor(modelItem => l.StoreLocationName)</option>
                            }
                        }
                    </select>
                </div>
                <div class="form-inline">
                    <button type="button" class="btn btn-primary">Add to Cart</button>
                    <label for="locationSelect" style="padding: 0 1em 0 1em">Qty:</label>
                    <select class="form-control" id="locationSelect">
                        <option>1</option>
                        <option>2</option>
                        <option>3</option>
                        <option>4</option>
                        <option>5</option>
                    </select>
                </div>
            </div>
        </div>
    </div>
</div>
