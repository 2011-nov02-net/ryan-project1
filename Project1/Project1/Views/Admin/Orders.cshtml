@model IEnumerable<Project1.BusinessLibrary.Order>

@{
    ViewData["Title"] = "Orders";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container">
    <h1>Orders</h1>
    <table class="table">
        <caption>All Stream's Customers Orders</caption>
        <thead>
            <tr>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.OrderId)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.OrderCustomerId)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.OrderStoreLocationId)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.OrderTime)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.OrderTotal)
                </th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.OrderId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.OrderCustomerId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.OrderStoreLocationId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.OrderTime)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.OrderTotal)
                    </td>
                    <td>
                        @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
