@model IEnumerable<Project1.BusinessLibrary.Product>

@{
    ViewData["Title"] = "Order Details";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    decimal total = 0;
}

<div class="container">
    <h1 style="margin-top: 1em;">Order Details</h1>
    <table class="table table-striped">
        <caption>Order's Products</caption>
        <thead style="background-color: #007bff; color: #f8f9fa">
            <tr>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.ProductId)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.ProductName)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.ProductPrice)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.ProductQty)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ProductId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ProductName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ProductPrice)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ProductQty)
                    </td>
                </tr>
                total += item.ProductPrice * item.ProductQty;
                Console.WriteLine(total);
            }
        </tbody>
    </table>
    <p style="text-align: right"><strong>Order Total: $@total.ToString("0.##")</strong></p>
</div>