@model Project1.WebApp.Models.AdminUserModel
@{
    ViewData["Title"] = "Users";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container">
    <h1>Users</h1>
    <form asp-controller="Admin" asp-action="Users" method="get">
        <p>
            Customer ID: <input type="text" asp-for="id" />
            <input type="submit" value="Filter" />
        </p>
    </form>
    <table class="table">
        <caption>All Stream's Users</caption>
        <thead>
            <tr>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.Customers[0].CustomerId)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.Customers[0].FirstName)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.Customers[0].LastName)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.Customers[0].UserType)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.Customers[0].Email)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.Customers[0].PasswordHash)
                </th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Customers)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.CustomerId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserType)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PasswordHash)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ })
                        @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
