@model IEnumerable<Project1.BusinessLibrary.StoreLocation>

@{
    ViewData["Title"] = "Locations";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container">
    <h1>Locations</h1>
    <p>
        <a asp-action="Create">Create New</a>
    </p>
    <table class="table">
        <caption>All Stream's Store Locations</caption>
        <thead>
            <tr>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.StoreLocationId)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.StoreLocationName)
                </th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.StoreLocationId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StoreLocationName)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                        @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>